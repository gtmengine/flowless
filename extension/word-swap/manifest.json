{
  "manifest_version": 3,
  "name": "Word Swap",
  "version": "1.0",
  "description": "Replace words on any website with custom alternatives",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Word Swap Settings"
  },
  "icons": {
    "48": "data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 48 48'><text y='32' font-size='32'>ðŸ”„</text></svg>"
  }
}

